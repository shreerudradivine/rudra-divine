<body>

<%- include('parts/nav') %>





  <main>
    <article>

      <!-- 
        - #STATS
      -->
<div><br><br><br><br><br><br></div>
      <section class="stats" aria-label="statistics">
        <div class="container">

          <div class="stats-content">

            <h2 class="h2 section-title">Serial Number : <%= item.serialNumber %></h2>

            <p class="section-text">
              Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Et malesuada fames ac turpis egestas sed.
            </p>


            <ul class="stats-list">

              <li>
                <div class="stats-card bg-gray">

                  <h3 class="h3 card-title">Name</h3>

                  <p class="card-text">
                    <%= item.name %>
                  </p>

                </div>
              </li>

              <li>
                <div class="stats-card bg-gray">

                  <h3 class="h3 card-title">Description</h3>

                  <p class="card-text">
                    <%= item.description %>
                  </p>

                </div>
              </li>

              <li>
                <div class="stats-card bg-gray">

                  <h3 class="h3 card-title">Date Created</h3>

                  <p class="card-text">
                    <%= item.date %>
                  </p>

                </div>
              </li>
            </ul>

          </div>

          <figure class="stats-banner">
            <img src="/<%= item.serialNumber %>.png"  alt="map" class="w-100">
          </figure>

        </div>
      </section>

    </article>
  </main>




